<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.User_Admin.ThietLapTaiKhoan.ThietLapTaiKhoanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarthietlap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C260D3">

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/manhinhUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#C260D3"
            android:layout_below="@+id/toolbarthietlap">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="20dp">
                <androidx.cardview.widget.CardView
                    android:id="@+id/view2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="5dp"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="40dp">

                    <ImageView
                        android:id="@+id/imgME"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_background"></ImageView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">
                <TextView
                    android:id="@+id/txtNameUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên user"
                    android:textSize="30sp"
                    android:textColor="#F40420"></TextView>
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manhinhUser"
            android:layout_marginTop="20dp"
            app:title="Thông tin user"
            app:menu="@menu/menu_toolbar"></androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDoiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarInformation"
            android:layout_marginTop="20dp"
            app:title="Đổi mật khẩu"
            app:menu="@menu/menu_toolbar">

        </androidx.appcompat.widget.Toolbar>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDangXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbarDoiMatKhau"
            android:layout_marginTop="20dp"
            app:title="Đăng xuất">

        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>