<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.Admin.DonHang.XacNhanDonHangActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarTTDonMua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"></androidx.appcompat.widget.Toolbar>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tablayout"
        android:layout_gravity="bottom"
        android:background="?attr/colorPrimary"
        app:tabTextAppearance="@style/MyTabText"
        app:tabMode="fixed"
        app:tabTextColor="#F61B1B"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tab_viewpaper" />

</LinearLayout>