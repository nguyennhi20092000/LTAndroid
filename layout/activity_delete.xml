<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.Admin.ThaoTacQuanLy.Delete.DeleteActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/contentLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarDelete"
            app:titleTextColor="@color/white"
            android:titleTextColor="#F344DAAA"
            android:background="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"></androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="139dp"
            android:layout_height="131dp"

            android:layout_marginTop="10dp"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:id="@+id/Thongtin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginTop="10dp"
            android:text="THAO TÁC XÓA"
            android:textSize="30sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="30sp">

    <Button
        android:id="@+id/btnXoaLoaiSP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XÓA LOẠI SP"
        android:textSize="20sp"
        android:layout_margin="30sp"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:onClick="onClick"></Button>

    <Button
        android:id="@+id/btnXoaSP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XÓA SẢN PHẨM"
        android:textSize="20sp"
        android:layout_margin="30sp"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:onClick="onClick"></Button>

    <Button
        android:id="@+id/btnXoaChiTietSP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XÓA CHI TIẾT"
        android:textSize="20sp"
        android:layout_margin="30sp"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:onClick="onClick"></Button>


</LinearLayout>

</LinearLayout>
