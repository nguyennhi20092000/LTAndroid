<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgChitiet"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/noimage"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"></ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txttenChitiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Tên chi tiết sản phẩm"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"></TextView>
            <TextView
                android:id="@+id/txtGiaSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Giá sản phẩm"></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Số lượng: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"></TextView>
                <TextView
                    android:id="@+id/txtchitietgiohang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:layout_marginLeft="10dp"></TextView>
            </LinearLayout>
            <TextView
                android:id="@+id/txtTongtienSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="TongTienSP"
                android:layout_marginTop="10dp"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>