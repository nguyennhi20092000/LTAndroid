<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.Admin.TheoDoiSP.TheoDoiSPActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbartheodoisp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Theo dõi sản phẩm"
        android:background="@color/purple_500"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/contentLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="139dp"
            android:layout_height="131dp"

            android:layout_marginTop="10dp"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:id="@+id/Thongtin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginTop="10dp"
            android:text="THEO DÕI SẢN PHẨM"
            android:textSize="30sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="30sp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnDanhSachBanChay"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Danh sách bán chạy"
            android:textSize="20sp"
            android:layout_margin="30sp"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:onClick="onClick"></Button>

        <Button
            android:id="@+id/btnBieuDo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="biểu đồ "
            android:textSize="20sp"
            android:layout_margin="20sp"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:onClick="onClick"></Button>


    </LinearLayout>


</LinearLayout>