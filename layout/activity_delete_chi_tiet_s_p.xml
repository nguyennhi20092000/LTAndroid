<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.Admin.ThaoTacQuanLy.Delete.DeleteChiTietSPActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/contentLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/ToolbarDeleteChiTietsp"
            android:title="Hoa"
            app:titleTextColor="@color/white"
            android:titleTextColor="#F344DAAA"
            android:background="@color/purple_700"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"></androidx.appcompat.widget.Toolbar>
        <ImageView
            android:id="@+id/logo"
            android:layout_width="139dp"
            android:layout_height="131dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"></ImageView>

        <TextView
            android:id="@+id/Thongtin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginTop="10dp"
            android:text="THAO TÁC XÓA CHI TIẾT SẢN PHẨM"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_margin="20sp"
            android:textColor="@color/black"></TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại sản phẩm:"
                        android:layout_marginRight="20sp"
                        android:textSize="20sp"
                        android:textColor="@color/black"></TextView>
                    <Spinner

                        android:id="@+id/spinnerLoaiSP"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sản phẩm:"
                        android:layout_marginRight="20sp"
                        android:textSize="20sp"
                        android:textColor="@color/black"></TextView>
                    <Spinner

                        android:id="@+id/spinnerSP"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết sản phẩm:"
                        android:layout_marginRight="20sp"
                        android:textSize="20sp"
                        android:textColor="@color/black"></TextView>
                    <Spinner

                        android:id="@+id/spinnerChiTietSP"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"></Spinner>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILEditTenChiTietSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Thongtin"
                    android:layout_marginTop="5dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtDeletetenchitietSP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập vào tên chi tiết sản phẩm"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILEditLinkChiTietSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Thongtin"
                    android:layout_marginTop="5dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtDeletelinkchitietSP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập vào link hình ảnh minh họa "
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/TILEditGiaChiTietSP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Thongtin"
                    android:layout_marginTop="5dp"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtDeletegiachitietSP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nhập vào giá chi tiết sản phẩm "
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btnDeleteChiTietSP"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DELETE"
                android:textColor="@color/white"
                android:background="@color/purple_700"></Button>
        </LinearLayout>
    </ScrollView>



</LinearLayout>