<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.User.DonHang.DanhGiaActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardanhgia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Đánh giá"
        android:background="@color/purple_500"
        app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/imgAnhSP"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/noimage"></ImageView>

    <TextView
        android:id="@+id/txttensp"
        android:text="Tên sản phẩm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#F30D0D"></TextView>

    <TextView
        android:id="@+id/txtDongia"
        android:text="Giá"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#F30D0D"
        android:layout_margin="20dp"></TextView>

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rattingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"></androidx.appcompat.widget.AppCompatRatingBar>
    <Button
        android:id="@+id/btnDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:layout_gravity="center"></Button>
</LinearLayout>