<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".action.User_Admin.CheckFireBase.CheckPhoneActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/contentLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo"></ImageView>

            <TextView
                android:id="@+id/Dangnhap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Check Phone Number"
                android:textSize="30sp"
                android:layout_below="@id/imgLogo"
                android:gravity="center"></TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/txtTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điền gmail liên hệ"
            android:layout_below="@id/contentLogo"
            android:textSize="20sp"
            android:layout_margin="20dp"></TextView>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTextEmail"
            android:id="@+id/TILCheckSDT"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="10dp"
                android:id="@+id/txtCheckSDT"
                android:hint="Nhập vào email liên hệ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSendSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_below="@id/TILCheckSDT"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"></Button>

        <TextView
            android:id="@+id/txtTextCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Điền mã kiểm tra"
            android:layout_below="@id/btnSendSDT"
            android:textSize="20sp"
            android:layout_margin="20dp"></TextView>

        <com.google.android.material.textfield.TextInputLayout

            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTextCheck"
            android:id="@+id/TILMaCode"
            app:errorEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_marginTop="10dp"
                android:id="@+id/txtMaCode"
                android:hint="Nhập vào mã kiểm tra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btnCheckCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_below="@id/TILMaCode"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"></Button>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>