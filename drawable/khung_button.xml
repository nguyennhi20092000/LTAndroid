<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">    <!-- Set màu nền-->
    <solid android:color="@color/white"></solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="5dp"
        android:color="#EF1B0B"></stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"></padding>


    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners android:radius="2dp"></corners>

</shape>